<%- include('partials/header') -%>

<div class="container my-4">
  <h2 class="text-center">Sign Up</h2>
  <p class="lead mb-4">Please fill in all fields.</p>
  <form action="/sign-up" method="POST" class="">
    <div class="row form-group">
      <div class="col-2">
        <label for="first_name">First Name</label>
      </div>
      <div class="col-10">
        <input
          name="first_name"
          id="first_name"
          type="text"
          class="form-control"
          placeholder="First Name"
          required
        />
      </div>
    </div>

    <div class="row form-group">
      <div class="col-2">
        <label for="last_name">Last Name</label>
      </div>
      <div class="col-10">
        <input
          name="last_name"
          id="last_name"
          type="text"
          class="form-control"
          placeholder="Last Name"
          required
        />
      </div>
    </div>

    <div class="row form-group">
      <div class="col-2">
        <label for="email">Email</label>
      </div>
      <div class="col-10">
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          placeholder="Email Address"
          required
        />
      </div>
    </div>

    <div class="row form-group">
      <div class="col-2">
        <label for="username">Username</label>
      </div>
      <div class="col-10">
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          placeholder="Username"
          required
        />
      </div>
    </div>

    <div class="row form-group">
      <div class="col-2">
        <label for="password">Password</label>
      </div>
      <div class="col-10">
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          placeholder="Password"
          required
        />
      </div>
    </div>

    <div class="text-center">
      <input type="submit" value="submit" class="btn btn-lg btn-light custom-btn" />
    </div>
  </form>

  <!-- Errors -->
  <div class="mt-2">
    <% if(errors) { %> <% for(const error of errors){ %>
    <div class="alert alert-danger"><%= error.msg %></div>
    <% } %> <% } %>
  </div>
</div>

<%- include('partials/footer', { user }) -%>

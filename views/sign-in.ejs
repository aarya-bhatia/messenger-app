<%- include('partials/header') -%>

<div class="container my-4">
  <h2 class="text-center">Sign In</h2>
  <div class="mb-4">
    <p class="lead">Please fill in all fields.</p>
    <% if(message != "") { %>
    <p><%= message %></p>
    <% } %>
  </div>
  <form action="/sign-in" method="POST" class="">
    <div class="row form-group">
      <div class="col-2">
        <label for="email">Email</label>
      </div>
      <div class="col-10">
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          placeholder="Email Address"
          required
        />
      </div>
    </div>
    <div class="row form-group">
      <div class="col-2">
        <label for="password">Password</label>
      </div>
      <div class="col-10">
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          placeholder="Password"
          required
        />
      </div>
    </div>

    <center>
      <input type="submit" class="btn btn-large btn-light custom-btn" />
    </center>
  </form>
</div>

<%- include('partials/footer') -%>

<%- include('partials/header') -%>

<div class="container my-4">
  <h2 class="text-center">Sign Up</h2>
  <div class="mb-4">
    <% if(message != "") { %>
    <small class="">*<%= message %></small>
    <% } else { %>
    <small class="">Please fill in all fields</small>
    <% } %>
  </div>
  <form action="/sign-up" method="POST" class="">
    <div class="row form-group">
      <div class="col-2">
        <label for="email">Email</label>
      </div>
      <div class="col-10">
        <input
          name="email"
          id="email"
          type="email"
          class="form-control"
          placeholder="Email Address"
          required
        />
      </div>
    </div>

    <div class="row form-group">
      <div class="col-2">
        <label for="username">Username</label>
      </div>
      <div class="col-10">
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          placeholder="Username"
          required
        />
      </div>
    </div>

    <div class="row form-group">
      <div class="col-2">
        <label for="password">Password</label>
      </div>
      <div class="col-10">
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          placeholder="Password"
          required
        />
      </div>
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-large btn-primary">Submit</button>
    </div>
  </form>
</div>


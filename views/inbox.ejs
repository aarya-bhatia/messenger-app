<%- include('partials/header') -%>

<!-- messages window -->
<div data-message-list>
  <div class="text-center" id="spinner">
    <div class="spinner-border" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
</div>
<!-- end window -->

<!-- Send message form -->
<div class="my-2">
  <form action="" method="">
    <div class="input-group mb-3">
      <input
        name="content"
        id="content"
        type="text"
        class="form-control"
        placeholder="Type message here..."
        aria-label="Type message here"
      />
      <div class="input-group-append">
        <input
          class="btn btn-lg btn-light form-btn"
          type="submit"
          value="Send"
        />
      </div>
    </div>
  </form>
</div>
<!-- end message form -->

<div data-status-info ></div>

<!-- message card template -->
<template id="message-card-template">
  <div class="container">
    <div class="row">
      <div class="col-sm-2 d-none d-lg-block">
        <span class="" style="color: primary" data-message-sender></span>
      </div>
      <div class="col-sm-7 text-left">
        <div data-message-content></div>
      </div>
      <div class="col-sm-3 text-right d-none d-lg-block">
        <span class="small" data-message-time></span>
      </div>
    </div>
  </div>
</template>
<!-- end message card template -->

<script type="text/javascript">
  const full_name = "<%= user.first_name %> <%= user.last_name %>";
  const user_id = "<%= user._id %>";
  const username = "<%= user.username %>";
</script>

<script type="text/javascript" src="/inbox.js"></script>

<%- include('partials/footer', { user }) -%>
